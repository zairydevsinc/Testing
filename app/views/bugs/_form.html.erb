<h2>Bug</h2>

<%= form_with(model: [@project, @bug], local: true, class: 'text-center') do |form| %>

  <%= form.text_field :title, placeholder: 'Bug/Feature Title' %>

  <div class="field">
    <%= form.label :type %><br>
    <%= form.select :type, ['Bug', 'Feature'], selected: 'Bug' %>
  </div>

  <div>
   <%= form.label :deadline %><br>
    <%= form.date_select :deadline %>
  </div>

  <div >
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="mt-5 pt-5">
    <%= form.label :image %><br>
    <%= form.file_field :image%>
    <br>
    <br>
  </div>

   <%= form.submit "Submit" %>

<% end %>

<%= link_to 'Back', project_bugs_path %>
