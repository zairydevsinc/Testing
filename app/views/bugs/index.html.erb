<%= render 'dashboards/header' %>


<h1> Project: <%= @project.title %> </h1>
<% @bugs.each do |bug| %>

  <h4>
    <%= link_to bug.title, project_bug_path(@project, bug) %>
    <% if policy(bug).delete? %>
      <%= link_to [@project, bug], method: :delete, data: {confirm: "Are you sure you want to delete this user?"} do %>
          Delete
      <% end %>
    <% end %>
    <% if policy(bug).edit? %>
      <%= link_to edit_project_bug_path(@project, bug) do %>
        Edit
      <% end %>
    <% end %>

  </h4>

  <hr>

  <p class="card-text"><%= bug.description %></p>

  <ul>
    <li>
    <b>Started : </b>
      <%= bug.created_at.to_formatted_s(:long) %>
    </li>

    <li >
      <% if bug.assigned_to_id? %>
        <i> Assgined</i>
      <% else %>
        <i> Not Assgined</i>
      <% end %>
    </li>

    <li>
      <% if bug.status == "New" %>
        <i> New</i>
      <% elsif bug.status == "Started" %>
        <i> Started</i>
      <% elsif bug.status == "Resolved" %>
        <i> Resolved</i>
      <% end %>
    </li>

    <li>deadline: <%= bug.deadline%>
    </li>
  </ul>
<% end %>

<h3> Summary </h3>

<ul >
  <li class="list-group-item"> Bugs:
    <%= @project.bugs.count %>
  </li>

  <li class="list-group-item"> Developers:
    <%= @project.assigned_user.count %>
  </i>
    <ol>
      <% @project.assigned_user.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    </ol>
</ul>

<%= link_to 'Back', projects_path %>
