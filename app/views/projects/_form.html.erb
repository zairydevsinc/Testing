<%= form_with model: project, local: true do |form| %>
  <div class="field form-group ">
    <label for="title">Project Title</label>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Project Title' %>
  </div>

  <div class="field form-group ">
    <label for="description">Project Description</label>
    <%= form.text_area :description, class: 'form-control' %>
  </div>



  <div class="field form-group ">
    <label for="users"><b>Select Developers</b></label>
    <br/>
    <%= form.collection_check_boxes(:object_id, user.where(:usertype => 'Developer'), :id, :name, {selected: @project.assigned_user.ids}, {multiple: true} ) %>
    <br/>
    <label for="users"><b>Select QA</b></label>
    <br/>
    <%= form.collection_check_boxes(:object_id, user.where(:usertype => 'QA'), :id, :name, {selected: @project.assigned_user.ids}, {multiple: true} ) %>
  </div>

  <div class="actions">
    <%= form.submit "Enter", class: "btn btn-secondary" %>
  </div>

<% end %>
<br/>

<button>
<%= link_to 'Back', projects_path %>
</button>
