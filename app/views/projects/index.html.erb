<%= render 'dashboards/header' %>
<h1>Projects</h1>
<% if policy(Project).new? %>
  <a href="<%= new_project_path %>">Create new Project</a>
<% end %>


<% @projects.each do |project| %>
<h4>
  <%= link_to project.title, project_path(project) %>
    <% if policy(project).delete? %>
      <%= link_to project, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, class: "btn btn-responsive btn-default btn-sm mdb-color darken-3 " do %>
       Delete
      <% end %>
    <% end %>

    <% if policy(project).edit? %>
      <%= link_to edit_project_path(project), class: "btn btn-responsive btn-default btn-sm mdb-color darken-3" do %>
        Edit
      <% end %>
    <% end %>
</h4>
<hr>

<p class="card-text"><%= project.description %></p>
<ul >
  <li>
    <i class="far fa-clock pr-1"></i><b>Started</b>: <%= project.created_at.to_date %>
  </li>
  <li>
    <div class="white-text"><i class="fa fa-bug pr-1"></i><%= project.bugs.count %></div>
  </li>
  <li>
   <div class="white-text"><i class="fa fa-user pr-1"> <%= project.assigned_user.count %> </i></div>
  </li>
</ul>
<% end %>
<%= link_to 'Back', root_path %>













