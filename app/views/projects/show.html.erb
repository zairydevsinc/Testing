<h2 ><%= @project.title %></h2>

<h2 class="h5">Project Manager: <%= @project.creator.name %></h2>

<hr class="hr-dark"/>
<p ><%= @project.description %>
<span class="grey-text"><%= @project.created_at.to_date %></span></p>

<% if policy(@project).delete? %>
  <%= link_to @project, method: :delete, data: {confirm: "Are you sure you want to delete this Project?"} do %>
     Delete
  <% end %>
<% end %>

<% if policy(@project).edit? %>
  <%= link_to edit_project_path(@project) do %>
     Edit
  <% end %>
<% end %>


<% if current_user.usertype == "QA" %>
  <a href="<%= new_project_bug_path @project %>">create new Bug</a>
<% end %>

<% if @project.bugs.count > 0 %>
  <div class="card mt-2">
      <h3 class="h4-responsive"> <%= link_to 'See Project Bugs', project_bugs_path(@project.id), class: 'white-text' %></h3>
  </div>
<% end %>

<ul>
  <li class="list-group-item"><i> Bugs: <%= @project.bugs.count %></i></li>
  </li>
  <li class="list-group-item"><i> Users: <%= @project.assigned_user.count %></i>
    <ol class="mt-2">
      <% @project.assigned_user.each do |user| %>
        <li class="grey-text"><%= user.name %></li>
      <% end %>
    </ol>
  </li>
</ul>


<%= link_to 'Back', root_path %>




